<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:id="@+id/cardProductImages"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewPagerProduct"  />



        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LinearLayout"
            app:layout_constraintTop_toBottomOf="@+id/cardProductImages"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/specialProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/h3"
                android:text="ProductName"
                android:fontFamily="@font/poppins_semibold"/>


            <TextView
                android:id="@+id/specialProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/h3"
                android:text="6999"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_semibold"/>



        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            style="@style/h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Description"
            app:layout_constraintEnd_toEndOf="@+id/LinearLayout"
            app:layout_constraintStart_toStartOf="@+id/LinearLayout"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayout" />

        <TextView
            android:layout_width="0dp"
            style="@style/h2"
            android:id="@+id/Description"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:layout_height="wrap_content"
            android:text="Equip yourself for successful gardening with GreenHarvest's durable Garden Tools Set. Crafted for efficiency and longevity, these tools make tending to your garden a breeze."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />


        <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/addtoCart"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:backgroundTint="#00EE87"
            android:fontFamily="@font/poppins_bold_italic"
            android:text="Add to Cart"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Description"
            app:layout_constraintVertical_bias="0.228" />

        <!--        <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton-->
